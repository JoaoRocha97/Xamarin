<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FormsXamarin"
             x:Class="FormsXamarin.MainPage" Padding="0, 10, 0, 0">
  
  <StackLayout>
    <Entry Text="{Binding PrimeiroNumero}" Placeholder="Primeiro Número" Keyboard="Numeric"/>
    <Entry Text="{Binding SegundoNumero}" Placeholder="Segundo Número" Keyboard="Numeric"/>
    <Label Text="{Binding Resultado}"/>
    <Button Text="Somar" Command="{Binding SomarCommand}"/>
  </StackLayout>

</ContentPage>